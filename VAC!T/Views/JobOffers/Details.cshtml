@model JobOffer
@using Microsoft.AspNetCore.Identity;
@inject UserManager<VAC_TUser> UserManager
@inject RoleManager<IdentityRole> RoleManager
@inject SignInManager<VAC_TUser> SignInManager
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2 text-center">
           <img lass="rounded-circle img" src=@Url.Content("~/" + Model.LogoURL) height="150" width="150" alt="Logo" />
        </div>
        <div class="col-10">
            <div class="contair-fluid">
                <div class="details-date" >
                    <h7>@Html.DisplayFor(model => model.Created)</h7>
                </div>
                <div class="details-name">
                    <h4>@Model.Name</h4>
                </div>
                <div class="row">
                    <div class="details-info">
                        <div class="details-level w-max d-inline-flex">
                            <div class="text-orange d-inline-flex">
                                <h5>Niveau: </h5>
                            </div>
                            <h5>@Model.Level</h5>
                        </div>
                        <div class="details-location w-max float-end d-inline-flex">
                            <h5>@Model.Residence</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2 text-center">
            <img class="rounded-circle img" src="@Url.Content("~/" + Model.Company.LogoURL)" height="100" width="100" alt="Company Logo" />
        </div>
        <div class="col-10">
            <p>@Model.Description</p>
        </div>
    </div>
    @if (SignInManager.IsSignedIn(User))
            {
                if (User.IsInRole("ROLE_CANDIDATE"))
                {
                    <div class="row Solicitate align-items-center">
                        <div class="solicitate-arrow col-2">
                            <img class="rounded-circle float-end" src=@Url.Content("~/assets/arrow.png") height="50" width="50" alt="Arrow" />
                        </div>
                        <div class="solicitate-now text-orange col-8">
                            <a class="navbar-brand" asp-area="" asp-controller="Solicitations" asp-action="Solicitate" asp-route-jobOfferId="@Model.Id">
                                <h4>SOLLICITEER DIRECT</h4>
                            </a>
                            <h4>@Model.Id.ToString()</h4>
                        </div>
                    </div>
                }
            }
</div>

<div>
    <h4>JobOffer</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LogoURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LogoURL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
