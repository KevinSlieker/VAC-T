@model IEnumerable<VAC_T.Models.VAC_TUser>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-orange">
<h1>Users</h1>
</div>

<form class="container-fluid" asp-action="Index" method="get">
    <div class="form-action row align-items-center">
        <p>
            <div class="col-3">
            Naam: <input type="text" class="form-control" name="searchName" value="@ViewData["searchName"]" />
            </div>
            <div class="col-3">
            Email: <input type="text" class="form-control" name="searchEmail" value="@ViewData["searchEmail"]" />
            </div>
            <div class="col-3 d-flex">
                <input type="submit" value="Filter" class="btn btn-primary"/>
                <a class="padding-left-05" asp-action="index">
                    <input type="button" value="Clear" class="btn btn-primary" />
                </a>
            </div>
        </p>
        <hr />
    </div>
</form>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    Opties
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a class="text-decoration-none text-orange"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="text-decoration-none text-orange" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
