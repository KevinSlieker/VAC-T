@model VAC_T.Models.Company

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-orange">
    <h1>Edit</h1>

    <h4>Bedrijf</h4>
</div>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="User" />
            <input type="hidden" asp-for="LogoURL" />
            <div class="form-floating mb-3 text-orange">
                <input asp-for="Name" class="form-control" />
                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-orange">
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-orange">
                <input asp-for="WebsiteURL" class="form-control" rows="10"/>
                <label asp-for="WebsiteURL" class="control-label"></label>
                <span asp-validation-for="WebsiteURL" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-orange">
                <input asp-for="Address" class="form-control" />
                <label asp-for="Address" class="control-label"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-orange">
                <input asp-for="Postcode" class="form-control" />
                <label asp-for="Postcode" class="control-label"></label>
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 text-orange">
                <input asp-for="Residence" class="form-control" />
                <label asp-for="Residence" class="control-label"></label>
                <span asp-validation-for="Residence" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="Opload-new-LogoURL-JobOffer padding-top-5">
        <a class="navbar-brand" asp-area="" asp-controller="FileUpload" asp-action="EditCompanyLogo" asp-route-id="@Model.Id">
            <input type="button" value="Logo veranderen" class="btn btn-primary" />
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
