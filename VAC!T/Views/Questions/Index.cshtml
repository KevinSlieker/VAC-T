@model IEnumerable<VAC_T.Models.Question>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Maak een nieuwe vraag</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuestionText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MultipleOptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExplanationType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MultipleOptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExplanationType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @("|")
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> | 
                    @if ((item.Type == "Meerkeuze" || item.Type == "Standpunt") && item.Options.Count() == 0)
                    {
                        <a asp-action="CreateOptions" asp-route-id="@item.Id" class="text-red">Opties toevoegen</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
