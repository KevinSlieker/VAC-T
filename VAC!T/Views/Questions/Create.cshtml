@model VAC_T.Models.Question

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (User.IsInRole("ROLE_ADMIN"))
            {
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class ="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
            } else
            {
                <input type="hidden" asp-for="CompanyId"/>
            }
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"/>
            </div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            <p>De volgende opties zijn alleen voor meerkeuze vragen:</p>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MultipleOptions" /> @Html.DisplayNameFor(model => model.MultipleOptions)
                </label>
            </div>
            <p>De volgende opties zijn alleen voor meerkeuze vragen:</p>
            <div class="form-group">
                <label asp-for="ExplanationType" class="control-label"></label>
                <select asp-for="ExplanationType" class="form-control" asp-items="ViewBag.ExplanationType" />
            </div>
            <p>De volgende opties zijn alleen voor meerkeuze vragen:</p>
            <div>
                <label asp-for="OptionsAmount" class="control-label"></label>
                <select asp-for="OptionsAmount" class="form-control">
                    @for (int i=1; i<11; i++)
                    {
                    <option value="@i">@i</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a class="text-decoration-none" asp-action="CreateYesOrNoQuestion">
            <input type="button" value="Maak een Ja/Nee Vraag" class="btn btn-primary" />
        </a>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

