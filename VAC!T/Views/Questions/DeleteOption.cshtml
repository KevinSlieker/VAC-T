@model VAC_T.Models.QuestionOption

@{
    ViewData["Title"] = "DeleteOptie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>DeleteOptie</h1>

<h3>Weet je zeker dat je dit wilt verwijderen?</h3>
<div>
    <h4>Vraag optie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question.QuestionText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OptionShort)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionShort)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OptionLong)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OptionLong)
        </dd>
    </dl>
    
    <form asp-action="DeleteOption">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Terug naar index</a>
    </form>
</div>
