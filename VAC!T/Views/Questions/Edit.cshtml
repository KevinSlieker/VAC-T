@model VAC_T.Models.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @if (User.IsInRole("ROLE_ADMIN"))
            {
                @if (Model.Type != "Ja/Nee")
                {
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                    </div>
                }
            }
            else
            {
                <input type="hidden" asp-for="CompanyId" />
            }
            @if (Model.Type != "Ja/Nee")
            {
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            }
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
            </div>
            @if (Model.Type != "Ja/Nee")
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="MultipleOptions" /> @Html.DisplayNameFor(model => model.MultipleOptions)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="ExplanationType" class="control-label"></label>
                    <input asp-for="ExplanationType" class="form-control" />
                    <span asp-validation-for="ExplanationType" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

