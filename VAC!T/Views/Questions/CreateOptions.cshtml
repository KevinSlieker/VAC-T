@model IEnumerable<VAC_T.Models.QuestionOption>;
@{
	ViewData["Title"] = "Create Question Options";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Create Question Options</h1>

<h4>Question Options</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOptions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Vraag: @ViewData["QuestionText"]</p>
            @foreach (var option in Model)
            {
                <div class="border">
                    <input type="hidden" asp-for="@option.QuestionId" />
                    <div class="form-group">
                        <label asp-for="@option.OptionShort" class="control-label"></label>
                        <input asp-for="@option.OptionShort" class="form-control" />
                        <span asp-validation-for="@option.OptionShort" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@option.OptionLong" class="control-label"></label>
                        <input asp-for="@option.OptionLong" class="form-control" />
                        <span asp-validation-for="@option.OptionLong" class="text-danger"></span>
                    </div>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>