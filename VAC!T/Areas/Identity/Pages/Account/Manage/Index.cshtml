@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Please enter your name."/>
                <label asp-for="Input.Name" class="form-label"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Adress" class="form-control" placeholder="Please enter your adress."/>
                <label asp-for="Input.Adress" class="form-label"></label>
                <span asp-validation-for="Input.Adress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ProfilePicture" class="form-control" placeholder="Please enter your profile picture."/>
                <label asp-for="Input.ProfilePicture" class="form-label"></label>
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Motivation" class="form-control" placeholder="Please enter your motivation."/>
                <label asp-for="Input.Motivation" class="form-label"></label>
                <span asp-validation-for="Input.Motivation" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CV" class="form-control" placeholder="Please enter your CV."/>
                <label asp-for="Input.CV" class="form-label"></label>
                <span asp-validation-for="Input.CV" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
